#include <bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp>
using namespace __gnu_pbds;
using namespace std;
 
typedef long long ll;
typedef tree<int, null_type, less<int>, rb_tree_tag, tree_order_statistics_node_update> ordered_set;
 
void solve() {
    int n, a, b;
    cin >> n >> a >> b;
    if(a + b > n || (a == 0 && b > 0) || (b == 0 && a > 0)) {
        cout << "NO" << "\n";
        return;
    }
 
    vector<int> x(n);
    vector<int> y(n);
    for(int i = 0; i < n; i++) {
        x[i] = i + 1;
        y[i] = i + 1;
    }
 
    int r = a + b - 1;
    reverse(x.begin(), x.begin() + r + 1);
    reverse(x.begin(), x.begin() + a);
    reverse(x.begin() + a, x.begin() + r + 1);
 
    cout << "YES" << "\n";
    for(int i = 0; i < n; i++) {
        cout << x[i] << " ";
    }
    cout << "\n";
    for(int i = 0; i < n; i++) {
        cout << y[i] << " ";
    }
    cout << "\n";
}
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
 
    int t = 1;
    cin >> t;
    while(t--) {
        solve();
    }
    return 0;
}
